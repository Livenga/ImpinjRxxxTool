<Application x:Class="ImpinjRxxxTool.App"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="clr-namespace:ImpinjRxxxTool"
  StartupUri="Windows\MainWindow.xaml">
<Application.Resources>
  <Style x:Key="InputBoxBase" TargetType="{x:Type Control}">
    <Setter Property="BorderThickness" Value="0 0 0 1" />
    <Setter Property="Padding" Value="3 1" />
    <Setter Property="Margin" Value="0 3" />
    <Setter Property="VerticalAlignment" Value="Center" />
  </Style>

  <Style x:Key="AppTextBox" TargetType="{x:Type TextBox}" BasedOn="{StaticResource InputBoxBase}">
  </Style>

  <Style x:Key="AppPasswordBox" TargetType="{x:Type PasswordBox}" BasedOn="{StaticResource InputBoxBase}">
  </Style>

  <Style x:Key="AppHeaderText" TargetType="{x:Type TextBlock}">
    <Setter Property="Margin" Value="0 3 0 6" />
  </Style>

  <Style x:Key="AppContentText" TargetType="{x:Type TextBlock}">
    <Setter Property="VerticalAlignment" Value="Center" />
    <Setter Property="Margin" Value="0 0 6 0" />
  </Style>
</Application.Resources>
</Application>
